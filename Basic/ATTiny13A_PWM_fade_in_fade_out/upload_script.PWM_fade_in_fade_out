filename_base=upload_script.
filename=$0
filename="`echo $filename | grep -o -E "$filename_base*"`"
filename="`echo $filename | cut -d '.' -f2- `"

MCU=t13

#	Check MCU
#avrdude -c usbasp -p $MCU -P usb  -F 

#	Flash program
avrdude -c usbasp -p $MCU -P usb -U flash:w:"$filename.hex" 

